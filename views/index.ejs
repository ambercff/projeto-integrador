<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/style.css" rel="stylesheet" >
    <title> Tigre - Artigos Esportivos </title>
</head>
<body>
    <header>
            <div class="logo">
                <img src="imagens/logo-semfundo.jpg">
            </div>

            <input type="checkbox" id="nav_check" hidden>
            <nav>

                <div class="logo">
                    <img src="imagens/logo-semfundo.jpg">
                </div>

                <ul>
                    <li> <a href="jaquetas"> Jaquetas e Moletons </a> </li>
                    <li> <a href="tenis"> Tênis </a> </li>
                    <li> <a href="#"> Esportes </a> </li>
                    <li> <a href="products"> Todos os Produtos </a> </li>
                    <li>
                        <div class="search-bar">
                        <input type="text" placeholder="Pesquisar">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                    </li>
                    <% if (!user) {%>
                        <li>
                            <div class="icons">
                                <a href="cart"> <i class="fa-solid fa-cart-shopping"></i> </a>
                                <a href="login"> <i class="fa-regular fa-user"></i> </a>
                            </div>
                        </li>
                    <% } %>
                    <% if (user) {%>
                        <li>
                            <div class="icons">
                                <a href="cart"> <i class="fa-solid fa-cart-shopping"></i> </a>
                                <div class="logout">
                                    <p>Olá, <%= user.nome %>!</p>
                                    <form action="logout" method="POST">
                                        <button type="submit"><i class="fa-solid fa-right-from-bracket"></i></button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ul>


            </nav>
            <label for="nav_check" class="hamburguer">
                <div></div>
                <div></div>
                <div></div>
            </label>
    </header>
    <div class="advertising-1">
        
    </div>

    <div class="brands">
        <div class="title-brands">
            <p> Escolha a marca </p>
        </div>
        <div class="logos-brands">
            <div class="img-brand">
                <a href="#"><img src="imagens/logo-nike.svg"></a>
            </div>
            <div class="img-brand">
                <a href="#"><img src="imagens/logo-adidas.png"></a>
            </div>
            <div class="img-brand">
                <a href="#"><img src="imagens/logo-puma.png"></a>
            </div>
            <div class="img-brand">
                <a href="#"><img src="imagens/logo-umbro.png"></a>
            </div>
            <div class="img-brand">
                <a href="#"><img src="imagens/logo-mizuno.svg"></a>
            </div>
        </div>
    </div>
    <div class="advertising-2">

    </div>
    <div class="brands">
        <div class="title-brands">
            <p> Torça como nunca! </p>
        </div>
        <div class="logos-brands">
            <div class="logo-time">
                <a href="#"><img src="imagens/corinthians.png"></a>
            </div>
            <div class="logo-time">
                <a href="#"><img src="imagens/flamengo.png"></a>
            </div>
            <div class="logo-time">
                <a href="#"><img src="imagens/palmeiras.png"></a>
            </div>
            <div class="logo-time">
                <a href="#"><img src="imagens/santos.png"></a>
            </div>
            <div class="logo-time">
                <a href="#"><img src="imagens/internacional.png"></a>
            </div>
        </div>
    </div>

    <div class="title-destaques">
        <h1> Destaques </h1>
    </div>

    <div class="wrapper">
        <% for (const product of products) { %>
            <% if (product.categoria == 'destaque') { %>
            <div class="item">
                <a href="/product/<%= product.id %>">
                        <div class="item-img">
                            <img src="./imagens/<%=product.image%> ">
                        </div>
                        <p> <%= product.name %> </p>

                        <div class="valor">
                            <p> R$ <%= (product.price).toFixed(2)  %></p>
                        </div>        
                    <form method="POST" action="cart/add" class="comprar">
                        <input type="hidden" value="<%=product.id%>" name="product">
                        <div class="card-buy">
                            <% if(user) { %>
                            <button type="submit" class="button-buy"> Comprar </button>
                            <% } %>
                            <% if(!user) { %>
                                <button type="button" class="button-buy-lock" style="background-color: gray; opacity: 0.8; cursor: default;"> Comprar <i class="fa-solid fa-lock"></i> </button>
                            <% } %>
                        </div>
                    </form>
                </a>
            </div>
            <% } %>
        <% } %>
    </div>

<script src="https://kit.fontawesome.com/be07557a2e.js" defer crossorigin="anonymous"></script>
</body>
</html>
