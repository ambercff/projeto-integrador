<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/style.css" rel="stylesheet" >
    <title> Tigre - Artigos Esportivos </title>
</head>
<body>
    <header>
            <div class="logo">
                <img src="imagens/tigre.png">
            </div>

            <input type="checkbox" id="nav_check" hidden>
            <nav>

                <div class="logo">
                    <img src="imagens/tigre.png">
                </div>

                <ul>
                    <li> <a href="#"> Mulheres </a> </li>
                    <li> <a href="#"> Homens </a> </li>
                    <li> <a href="#"> Esportes </a> </li>
                    <li> <a href="products"> Todos os Produtos </a> </li>
                    <li>
                        <div class="search-bar">
                        <input type="text" placeholder="Pesquisar">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                    </li>
                    <% if (!user) {%>
                        <li>
                            <div class="icons">
                                <a href="cart"> <i class="fa-solid fa-cart-shopping"></i> </a>
                                <a href="login"> <i class="fa-regular fa-user"></i> </a>
                            </div>
                        </li>
                    <% } %>
                    <% if (user) {%>
                        <li>
                            <div class="icons">
                                <a href="cart"> <i class="fa-solid fa-cart-shopping"></i> </a>
                                <div class="logout">
                                    <p>Ol√°, <%= user.nome %>!</p>
                                    <form action="logout" method="POST">
                                        <button type="submit"><i class="fa-solid fa-right-from-bracket"></i></button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ul>


            </nav>
            <label for="nav_check" class="hamburguer">
                <div></div>
                <div></div>
                <div></div>
            </label>
    </header>

    <div class="wrapper">
        <table>
            <thead>
                <tr>
                    <th> Pedido </th>
                    <th> Nome do Produto </th>
                    <th> Total </th>
                </tr>
            </thead>
            <tbody>
                <% let pedidoNumero = 1; %>
                <% for (const user of users) { %>
                    <% for (const compra of user.cart.compras) { %>
                        <% if (compra.isCompleted == true) { %>
                            <tr>
                                <td> Pedido <%= pedidoNumero %> </td>
                                <td><%= compra.product.name %></td>
                                <td>R$ <%= compra.product.price.toFixed(2) %></td>
                            </tr>
                            <% pedidoNumero++; %>
                        <% } %>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
    
    
    <script src="https://kit.fontawesome.com/be07557a2e.js" defer crossorigin="anonymous"></script>
</body>
</html>